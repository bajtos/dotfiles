// Place your key bindings in this file to overwrite the defaults
[
  //=== Activity bar (MacOS) ===//

  {
    "key": "cmd+k cmd+a",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "cmd+k cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "cmd+k cmd+e",
    "command": "workbench.view.explorer"
  },
  {
    "key": "cmd+k cmd+g",
    "command": "workbench.view.scm"
  },
  {
    "key": "cmd+k cmd+h",
    "command": "workbench.view.extension.github-pull-requests"
  },
  {
    "key": "cmd+k cmd+d",
    "command": "workbench.view.debug"
  },
  {
    "key": "cmd+k cmd+x",
    "command": "workbench.extensions.action.showInstalledExtensions"
  },
  {
    "key": "cmd+k cmd+l",
    "command": "workbench.view.extension.liveshare"
  },

  //=== Activity bar (Windows) ===//

  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+a",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+e",
    "command": "workbench.view.explorer"
  },
  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+g",
    "command": "workbench.view.scm"
  },
  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+h",
    "command": "workbench.view.extension.github-pull-requests"
  },
  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+d",
    "command": "workbench.view.debug"
  },
  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+x",
    "command": "workbench.extensions.action.showInstalledExtensions"
  },
  {
    "when": "isWindows",
    "key": "ctrl+k ctrl+l",
    "command": "workbench.view.extension.liveshare"
  },

  //=== File Explorer (MacOS) ===/
  {
    "key": "cmd+d",
    "command": "duplicate.execute",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+cmd+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "cmd+r",
    "command": "workbench.files.action.refreshFilesExplorer",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },

  //=== File Explorer (Windows) ===/
  {
    "key": "ctrl+d",
    "command": "duplicate.execute",
    "when": "isWindows && explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
    "when": "isWindows && explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+ctrl+n",
    "command": "explorer.newFolder",
    "when": "isWindows && explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+r",
    "command": "workbench.files.action.refreshFilesExplorer",
    "when": "isWindows && explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },

  //=== Other customizations ===//

  {
    "key": "ctrl+w",
    "command": "workbench.action.closeActiveEditor",
    "when": "isWindows"
  },
  { "key": "shift+cmd+t", "command": "workbench.action.tasks.test" },
  {
    "key": "shift+ctrl+t",
    "command": "workbench.action.tasks.test",
    "when": "isWindows"
  },
  {
    "key": "ctrl+]",
    "command": "editor.action.goToDeclaration",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+t",
    "command": "workbench.action.navigateBack",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+o",
    "command": "workbench.action.navigateBack",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+n",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+k cmd+c",
    "command": "workbench.view.extension.dockerView"
  },
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  }
]
